{
  "manifest_version": 2,
  "name": "chatter.today",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab", "tabs", "storage"],
  "web_accessible_resources": ["chat.html"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "config.html"
  }
}